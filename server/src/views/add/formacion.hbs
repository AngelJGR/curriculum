<div class="container p-5">
	<div class="row">
		<div class="col-md-9 mx-auto">
			<div class="card text-center">
				<div class="card-header">
					<h3>Agregar Formación Académica</h3>
				</div>
				<div class="card-body">
					<form action="/add/formacion/{{id}}" method="post" accept-charset="utf-8">
						<div class="row pt-5">
							<div class="col-md-2">
								<div class="form-group">
									<select name="id_tipo_titulo" class="form-control">
										{{#each tipo_titulo}}
											<option value="{{id_tipo}}">{{descripcion}}</option>
										{{/each}}
									</select>
								</div>
							</div>
							<div class="col-md-5">
								<div class="form-group">
									<input type="text" name="curso" class="form-control" value="" placeholder="Curso o Título a Registrar">
								</div>
							</div>
							<div class="col-md-5">
								<div class="form-group">
									<select name="id_casa_de_estudio" class="form-control">
										{{#each casa_de_estudio}}
											<option value="{{id_casa_de_estudio}}">{{nombre}}</option>
										{{/each}}
									</select>
								</div>
							</div>
						</div>
						<div class="row pt-3">
							<div class="col-md-6">
								<div class="form-group">
									<a href="/update/formacion/{{id}}" class="btn btn-primary col-md-12">Regresar</a>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<button class="btn btn-success btn-block">Guardar</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>